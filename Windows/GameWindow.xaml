<Window x:Class="FeketeJános.Windows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FeketeJános.Windows"
        mc:Ignorable="d"
        Title="GameWindow" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="PlayerText"/>
            <TextBlock x:Name="DealerText" Margin="0,10,0,0"/>

            <TextBlock x:Name="PlayerValue" Margin="0,10,0,0"/>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Hit" Width="80" Click="Hit_Click"/>
                <Button Content="Stand" Width="80" Margin="10,0,0,0" Click="Stand_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
