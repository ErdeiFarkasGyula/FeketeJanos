<Window x:Class="FeketeJános.Windows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FeketeJános.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="GameWindow" Height="700" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="PlayerText" FontSize="42"/>
            <TextBlock x:Name="DealerText" Margin="0,10,0,0" FontSize="42"/>

            <TextBlock x:Name="PlayerValue" Margin="0,10,0,0" FontSize="42"/>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button x:Name="StartButton" Content="Hit" Width="200" Click="Hit_Click" Height="70" Foreground="#FF002D0B" FontSize="36" BorderThickness="3,3,3,3">
                    <Button.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF0F6F4E" Offset="0"/>
                            <GradientStop Color="#FF79CE4A" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.BorderBrush>
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF149066" Offset="1"/>
                            <GradientStop Color="#FFA4FF72" Offset="0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="StartButton_Copy" Content="Stand" Width="200" Click="Stand_Click" Height="70" Foreground="#FF002D0B" FontSize="36" BorderThickness="3,3,3,3" Margin="10,0,0,0">
                    <Button.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF0F6F4E" Offset="0"/>
                            <GradientStop Color="#FF79CE4A" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.BorderBrush>
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF149066" Offset="1"/>
                            <GradientStop Color="#FFA4FF72" Offset="0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
