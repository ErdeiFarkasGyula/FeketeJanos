<Window x:Class="FeketeJános.Windows.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FeketeJános.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ResultWindow" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="ResultText" FontSize="18"/>
            <TextBlock x:Name="FinalHands" Margin="0,10,0,0"/>

            <Button Content="Back to Menu" Margin="0,20,0,0" Click="Menu_Click"/>
        </StackPanel>
    </Grid>
</Window>
